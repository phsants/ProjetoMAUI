<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoMAUI.AlterarExcluirUsuario"
             Title="AlterarExcluirUsuario">
    <StackLayout Padding="25">
        <TableView Intent="Form"    HasUnevenRows="True">
            <TableRoot>
                <TableSection>
                    <EntryCell Label="Informe o nome do usuario: " x:Name="Nome"></EntryCell>
                    <EntryCell Label="Informe o login do usuario: " x:Name="Login"></EntryCell>
                    <EntryCell Label="Informe a senha do usuario: " x:Name="Senha"></EntryCell>
                </TableSection>
            </TableRoot>
        </TableView>
        <!-- Caso não aparecer automaticamente a ação para o Clicked do botão, aperte Ctrl+Espaço 
        para que a sugestão apareça entre as aspas -->
        <Button Text="Alterar Registro" Clicked="Button_Clicked"/>
        <Button Text="Excluir Registro" Clicked="Button_Clicked_1"/>
    </StackLayout>
</ContentPage>

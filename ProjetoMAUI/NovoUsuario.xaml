<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoMAUI.NovoUsuario"
             Title="NovoUsuario"
             BackgroundColor="White">
    <StackLayout Padding="25">
        <TableView Intent="Form"    HasUnevenRows="True">
            <TableRoot>
                <TableSection>
                    <EntryCell Label="Informe um nome para o novo usuario: " x:Name="Nome"></EntryCell>
                    <EntryCell Label="Informe um Login para o novo usuario: " x:Name="Login"></EntryCell>
                    <EntryCell Label="Informe uma senha para o novo usuario: " x:Name="Senha"></EntryCell>
                </TableSection>
            </TableRoot>
        </TableView>
        <!-- Caso não aparecer automaticamente a ação para o Clicked do botão, aperte Ctrl+Espaço 
        para que a sugestão apareça entre as aspas -->
        <Button Text="Salvar Registro" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>
